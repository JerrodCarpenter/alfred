<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
  <title>Automata</title>

  <!-- Load out assets: Bootstrap, Font Awesome Icons, and custom CSS !-->
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">

  <!-- Load custom css -->
  <link rel="stylesheet" href="http://babbage.cs.missouri.edu/~jsc8vf/assets/custom.css">

</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <a class="navbar-brand" href="#">Automata</a>
      <ul class="nav navbar-nav">
        <li><a href="/">Home</a></li>
      </ul>
      <a href="/logout" class="btn btn-danger navbar-right log"><span class="fa fa-unlink"></span> Logout</a>
    </div>
  </nav>

  <!-- Jumbotron -->
  <div class="jumbotron text-center">
    <div class="container">
      <h1><span class="fa fa-cogs"></span> Automata</h1>
    </div>
  </div>

  <div class="container">

    <div class="col-sm-6 col-sm-offset-3">
      <div class="panel panel-default">

        <div class="panel-heading">
          <h1><span class="fa fa-user"></span> Home</h1>
        </div>

        <div class="panel-body">

          <!-- Show messages that come back from attempted function, errors. -->
          <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
          <% } %>

          <!-- Show messages that come back from attempted function, errors. -->
          <% if (info.length > 0) { %>
            <div class="alert alert-success" role="alert"><%= info %></div>
          <% } %>

          <div class="btn-group btn-group-justified" role="group" aria-label="...">
            <a role="button" class="btn btn-warning" href="/door"><span class="fa fa-angle-double-up"></span> Unlock Door</a>
            <a role="button" class="btn btn-warning" href="/lock"><span class="fa fa-angle-double-down"></span> Lock Door</a>
          </div>

          <hr>

          <div class="btn-group btn-group-justified" role="group" aria-label="...">
            <a role="button" class="btn btn-warning" href="/garage"><span class="fa fa-truck"></span> Open Garage</a>
            <a role="button" class="btn btn-warning" href="/close"><span class="fa fa-truck"></span> Close Garage</a>
          </div>

          <hr>

          <div class="btn-group btn-group-justified" role="group" aria-label="...">
            <a role="button" class="btn btn-warning" href="/arm"><span class="fa fa-lock"></span> Arm System</a>
            <a role="button" class="btn btn-warning" href="/disarm"><span class="fa fa-unlock-alt"></span> Unarm System</a>
          </div>

          <hr>

          <div class="btn-group btn-group-justified" role="group" aria-label="...">
            <a role="button" class="btn btn-warning" href="/access"><span class="fa fa-users"></span> Grant Access</a>
            <a role="button" class="btn btn-warning" href="/users"><span class="fa fa-users"></span> View Users</a>
          </div>
        </div>
      </div>

    </div>

  </div>
</body>
</html>
